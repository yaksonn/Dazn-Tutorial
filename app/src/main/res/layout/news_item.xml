<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                tools:showIn="@layout/fragment_news" android:layout_height="100dp">

    <ImageView android:id="@+id/iv_news_item" android:layout_width="100dp" android:layout_height="100dp"
               android:src="@android:color/darker_gray"/>

    <TextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            tools:text="asdasdasdasdasdasas dkjfasdlşfalsdfknaskld"
            android:layout_above="@+id/tv_news_item_date"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:id="@+id/tv_news_item_date"
            android:textColor="@android:color/holo_red_dark"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            tools:text="asdasdasdsadasdasddsşbşadbgfskdgjdbgksjdbglkjsbdgkjsbdglkjdg"
            android:singleLine="true"
            android:layout_marginStart="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@android:color/darker_gray" android:layout_alignParentBottom="true"/>
</RelativeLayout>